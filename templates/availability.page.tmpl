{{template "base" .}}

{{define "content"}}
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1 class="mt-3">Choose Room Please</h1>

                {{range $index, $room := .Rooms }}
                <a href="http://localhost:8000/book-now/{{ $room.Room_id }}?ri={{ $.ResId }}"> {{ $room.Room_name }} </a><br>
                {{ end }}
            </div>
            <div class="col-md-3"></div>
        </div>

    </div>
{{end}}
